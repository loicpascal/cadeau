{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Liste des users{% endblock %}

{% block body %}
<h1>Liste des membres</h1>
{% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}
{% for message in app.flashes('danger') %}
    <div class="alert alert-danger">{{ message }}</div>
{% endfor %}
<div>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Identifiant</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th>{{ user.id }}</th>
                <td>{{ user.fullname }}</td>
                <td>{{ user.username }}</td>
                <td>
                    <a href="{{ path('idee_new', {'id_user': user.id}) }}" class="btn btn-primary btn-sm" title="Ajouter une idée"><i class="fas fa-plus"></i></a>
                    <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-primary btn-sm" title="Voir ses idées"><i class="fas fa-list-ul"></i>&nbsp;&nbsp;<span class="badge badge-light">{{ user.idees|length }}</span></a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteUser{{ user.id }}" title="Supprimer"><i class="fas fa-trash-alt"></i></button>
                    <!-- Modal -->
                    {{ include('include/modal.html.twig', {'id_modal' : 'deleteUser' ~ user.id ,'title' : 'Supprimer ' ~ user.firstname ~ ' ' ~ user.lastname, 'route' : path('user_delete', {'id': user.id}), 'lower' : false }) }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
