{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Ma liste{% endblock %}

{% block body %}
    {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            <label for="username">Identifiant</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
        </div>

        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" class="form-control" id="password" name="_password" />
        </div>

        <button type="submit" class="btn btn-primary btn-lg btn-block">Se connecter !</button>
        <br><br>
        <a href="{{ path('createAccount') }}" class="btn btn-success btn-lg btn-block">Je me cr√©e un compte !</a>
    </form>
{% endblock %}