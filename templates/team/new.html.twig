{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Nouveau groupe{% endblock %}

{% block body %}

    <div>
        <h1>Nouveau groupe</h1>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name, {'attr' : {'class' : 'form-control', 'placeholder' : 'Nom du groupe'}}) }}
        </div>

        <div>
            {{ form_widget(form.save, {'attr' : {'class' : 'btn btn-primary'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}